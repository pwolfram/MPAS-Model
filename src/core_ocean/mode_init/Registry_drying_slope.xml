	<nml_record name="drying_slope" mode="init" configuration="drying_slope">
		<nml_option name="config_drying_slope_use_distances" type="logical" default_value="false" units="unitless"
			description="Logical flag that determines if locations of features are defined by distances or fractions. False means fractions."
			possible_values=".true. or .false."
		/>
		<nml_option name="config_drying_slope_vert_levels" type="integer" default_value="100" units="unitless"
			description="Number of vertical levels in drying_slope test case. Typical values are 40 and 100."
			possible_values="Any positive integer number greater than 0."
		/>
		<nml_option name="config_drying_slope_layer_type" type="character" default_value="z-level" units="unitless"
			description="Logical flag that controls how the initial conditions should be generated."
			possible_values="'z-level', 'sigma', 'isopycnal'"
		/>
		<nml_option name="config_drying_slope_isopycnal_min_thickness" type="real" default_value="0.01" units="m"
			description="minimum layer thickness"
			possible_values="Any positive real number, typically 0.01 to 1.0"
		/>
		<nml_option name="config_drying_slope_north_bottom_depth" type="real" default_value="200.0" units="m"
			description="Depth of the bottom of the ocean in northern-most end.
			possible_values="Any positive real value greater than 0."
		/>
		<nml_option name="config_drying_slope_south_bottom_depth" type="real" default_value="100.0" units="m"
			description="Depth of the bottom of the ocean in southern-most end.
			possible_values="Any positive real value greater than 0."
		/>
		<nml_option name="config_drying_slope_water_thickness" type="real" default_value="10.0" units="fraction"
			description="Thickness of uniform thickness water layer on slope for t=0"
			possible_values="Any real number greater than 0."
		/>
		<nml_option name="config_drying_slope_salinity" type="real" default_value="35.0" units="PSU"
			description="Salinity of the water in the entire domain."
			possible_values="Any real number greater than 0."
		/>
		<nml_option name="config_drying_slope_domain_temperature" type="real" default_value="20.0" units="deg C"
			description="Temperature of water outside of the plug."
			possible_values="Any real number"
		/>
		<nml_option name="config_drying_slope_plug_temperature" type="real" default_value="20.0" units="deg C"
			description="Temperature of water in plug."
			possible_values="Any real number"
		/>
		<nml_option name="config_drying_slope_plug_width_frac" type="real" default_value="0.10" units="fraction"
			description="Fraction of the domain the plug should take up initially. Only in the y direction."
			possible_values="Any real number between 0 and 1."
		/>
		<nml_option name="config_drying_slope_plug_width_dist" type="real" default_value="20e3" units="m"
			description="Distance from the minimum Y value of the domain the plug should take up initially. Default is relative to a 200km domain."
			possible_values="Any positive real number."
		/>
	</nml_record>

